<div class='main-container'>
  <% @trips.in_groups(4) do |g| %>
    <div class="column<%= g[0].try(:id).to_i/3 + 1%>">
      <div class='grid'>
        <%= g[0].id %>
        <%= g[0].summary %>
      </div>
      <div class='grid'>
        <%= g[1].id %>
        <%= g[1].summary %>
      </div>
      <div class='grid'>
        <%= g[2].id %>
        <%= g[2].summary %>
      </div>
    </div>
  <% end -%>
</div>
